<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.GamePage">
    <ContentPage.Content>
        <VerticalStackLayout>
           <Button
               x:Name="NewGameBtn"
               Text="New Game"
               SemanticProperties.Hint="Start new game"
               Clicked="OnNewGameBtnClicked"
               HorizontalOptions="Center" />
                   
           <Button
               x:Name="Pin1"
               Text="1"
               HeightRequest="100"
               WidthRequest="100"
               CornerRadius="50" /> 
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>