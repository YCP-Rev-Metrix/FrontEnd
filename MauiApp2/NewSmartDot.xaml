<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.NewSmartDot"
             Title="Add SmartDot">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Add SmartDot"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            
            <Entry x:Name="SmartDotID"
                   Placeholder="SmartDot ID"
                   TextChanged="OnIdAdded"
            />
            
            <Picker x:Name="BallPicker"
                    Grid.Column="1">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Ball A</x:String>
                        <x:String>Z to A</x:String>
                        <x:String>Newest to Oldest</x:String>
                        <x:String>Oldest to Newest</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            
            
        </VerticalStackLayout>
    </ScrollView>
    
    
</ContentPage>
